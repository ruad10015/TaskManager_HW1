<Window x:Class="TaskManager_HW1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskManager_HW1"
        mc:Ignorable="d"
        Title="TaskManager" MaxHeight="500" MaxWidth="850" MinHeight="500" MinWidth="850">


    <Grid>
        <StackPanel VerticalAlignment="Top">

            <ListBox FontSize="20" Name="allProcesslistbx"
                    Height="350">
            </ListBox>

            <TextBox FontSize="25" Width="450" Name="taskTxtBx">

            </TextBox>
            <StackPanel Orientation="Horizontal">

                <Button Content="Run Task" Name="RunTaskBtn" 
                        Click="RunTaskBtn_Click" FontSize="25"
                         Margin="0,40,0,0" Width="150">
                </Button>
                <Button Content="End Task" Name="endTaskBtn" 
                        Click="endTaskBtn_Click" FontSize="25"
                        Margin="200,40,0,0" Width="150">
                </Button>
            </StackPanel>


        </StackPanel>

    </Grid>

</Window>
